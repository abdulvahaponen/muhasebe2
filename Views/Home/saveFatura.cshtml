@model Muhasebe.Models.Fatura
@{
    ViewData["Title"] = "saveFatura";
}

<h1>Fatura Ekle</h1>
<style>
    .icerik{
        height:350px;
        width:40%;
        border:2px solid gray;
        border-radius:25px;
    }
    .solTaraf{
        float:left;
        margin:30px;
    }
    .sagTaraf{
        float:left;
          margin:30px;
           
    }
</style>
<div class="icerik">
<form method="post">
    <div class="sagTaraf">
        @Html.LabelFor(x => x.ad):<br /><br />
        @Html.LabelFor(x => x.adres):<br /><br />
        @Html.LabelFor(x => x.faturaNo):<br /><br />
        @Html.LabelFor(x => x.sirket):<br /><br />
        @Html.LabelFor(x => x.tutar):<br /><br />
    </div>
    <div class="sagTaraf">
        @Html.TextBoxFor(x => x.ad)
        <br /><br />
        @Html.TextBoxFor(x => x.adres)
        <br /><br />
        @Html.TextBoxFor(x => x.faturaNo)
        <br /><br />
        @Html.TextBoxFor(x => x.sirket)
        <br /><br />
        @Html.TextBoxFor(x => x.tutar)
        <br /><br />
        <button>Fatura Ekle</button>
    </div>
</form>
</div>